<Page x:Class="Pract_Chayka_RentalCorp.Views.Pages.DataRental"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pract_Chayka_RentalCorp.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DataRental" Background="White" Loaded="Page_Loaded">

    <Grid>
        <Button x:Name="btnAdd" Content="Добавить" HorizontalAlignment="Left" Margin="69,32,0,0" VerticalAlignment="Top" Click="btnAdd_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="btnEdit" Content="Редактировать" HorizontalAlignment="Left" Margin="230,32,0,0" VerticalAlignment="Top" Click="btnEdit_Click"/>
        <Button x:Name="btnDel" Content="Удалить" HorizontalAlignment="Left" Margin="455,32,0,0" VerticalAlignment="Top" Click="btnDel_Click" />
        <Button x:Name="btnback" Content="Назад" HorizontalAlignment="Left" Margin="623,32,0,0" VerticalAlignment="Top" Click="btnback_Click"/>
        <DataGrid x:Name="datagridRental" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,96,0,0" SelectionChanged="datagridRental_SelectionChanged"/>

    </Grid>
</Page>
