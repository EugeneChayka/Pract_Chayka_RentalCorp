<Page x:Class="Pract_Chayka_RentalCorp.Views.Pages.Director"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pract_Chayka_RentalCorp.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Director" Background="White" Loaded="Page_Loaded">

    <Grid>
        <Label Content="Здравствуйте Директор" HorizontalAlignment="Left" Margin="26,26,0,0" VerticalAlignment="Top"/>
        <DataGrid x:Name="datagridEmp" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,72,0,0" SelectionChanged="datagridEmp_SelectionChanged" />
        <Button x:Name="btnAdd" Content="Добавить" HorizontalAlignment="Left" Margin="343,39,0,0" VerticalAlignment="Top" Click="btnAdd_Click"/>
        <Button x:Name="btnEdit" Content="Редактировать" HorizontalAlignment="Left" Margin="496,39,0,0" VerticalAlignment="Top" Click="btnEdit_Click"/>
        <Button x:Name="btnDel" Content="Удалить" HorizontalAlignment="Left" Margin="708,39,0,0" VerticalAlignment="Top" Click="btnDel_Click" />
    </Grid>
</Page>
